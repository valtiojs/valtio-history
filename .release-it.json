{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireBranch": ["main"]
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "publish": false,
    "versionArgs": ["--workspaces false"]
  },
  "hooks": {
    "after:bump": "pnpx auto-changelog -p"
  },
  "plugins": {
    "@release-it/bumper": {
      "out": "packages/**/package.json"
    }
  }
}
